[Unit]
Description=
After=network.service

[Service]
Type=simple
User={{ APP_USER }}
ExecStart=/usr/bin/podman run --name {{ SWIFT_NAME }} --network {{ APP_NETWORK }} -p {{ SWIFT_PORT }}:8080 -v {{ APP_SWIFT_DATA }}:/srv --privileged --rm -e "SWIFT_USERNAME={{ SWIFT_USERNAME }}" -e "SWIFT_KEY={{ SWIFT_KEY }}" {{ SWIFT_IMAGE }}:{{ SWIFT_VERSION }}
ExecStop=/usr/bin/podman rm {{ SWIFT_NAME }} -f
Restart=on-failure

[Install]
WantedBy=multi-user.target

