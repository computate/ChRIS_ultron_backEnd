[Unit]
Description=
After=network.service

[Service]
Type=simple
User={{ APP_USER }}
ExecStart=/usr/bin/podman run --name {{ DEV_NAME }} --pod {{ DEV_POD }} -v {{ APP_SRC }}/chris_backend:/home/localuser/chris_backend --privileged --rm -e "DJANGO_SETTINGS_MODULE=config.settings.local" -e "DJANGO_DB_MIGRATE=on" -e "DJANGO_COLLECTSTATIC=off" -e "SWIFT_HOSTNAME={{ SWIFT_POD }}" -e "STORE_HOSTNAME={{ STORE_POD }}" -e "PFCON_HOSTNAME={{ PFCON_POD }}" -e "QUEUE_HOSTNAME={{ QUEUE_POD }}" {{ DEV_IMAGE }}:{{ DEV_VERSION }} python manage.py runserver 0.0.0.0:8000
ExecStop=/usr/bin/podman rm {{ DEV_NAME }} -f
Restart=on-failure

[Install]
WantedBy=multi-user.target

