[Unit]
Description=
After=network.service

[Service]
Type=simple
User={{ APP_USER }}
ExecStart=/usr/bin/podman run --name {{ QUEUE_NAME }} --network {{ APP_NETWORK }} -v {{ APP_QUEUE_DATA }}:/var/lib/rabbitmq --privileged --rm {{ QUEUE_IMAGE }}:{{ QUEUE_VERSION }}
ExecStop=/usr/bin/podman rm {{ QUEUE_NAME }} -f
Restart=on-failure

[Install]
WantedBy=multi-user.target

